# ==============================================
# WISSE DIGITAL SIGNAGE - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
APP_NAME=Wisse Digital Signage
APP_VERSION=1.0.0

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Your VPS IP address or domain
SERVER_HOST=69.62.84.122
# HTTP port (default: 8080 to avoid conflicts)
HTTP_PORT=8080
# HTTPS port (default: 8443)
HTTPS_PORT=8443

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
BACKEND_PORT=3001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=rts_digital_signage_prod
DB_USER=root
DB_PASS=your_secure_password_here

# MySQL Root Password (for initial setup)
MYSQL_ROOT_PASSWORD=your_secure_password_here

# ==============================================
# MIDTRANS PAYMENT GATEWAY
# ==============================================
# Get these from https://dashboard.midtrans.com/
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=24h

# ==============================================
# FRONTEND URLS (Auto-generated, no need to change)
# ==============================================
# These will be automatically set based on SERVER_HOST and ports
FRONTEND_ADMIN_URL=http://${SERVER_HOST}:${HTTP_PORT}/admin
FRONTEND_CENTRAL_URL=http://${SERVER_HOST}:${HTTP_PORT}/central
FRONTEND_DISPLAY_URL=http://${SERVER_HOST}:${HTTP_PORT}/display

# ==============================================
# API URL (Auto-generated, no need to change)
# ==============================================
API_URL=http://${SERVER_HOST}:${HTTP_PORT}/api

# ==============================================
# SSL/TLS CONFIGURATION (Optional)
# ==============================================
# Set to 'true' to enable HTTPS
ENABLE_HTTPS=false
# SSL certificate paths (if using HTTPS)
SSL_CERT_PATH=./nginx/certs/server.crt
SSL_KEY_PATH=./nginx/certs/server.key

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_MAX_FILES=14d
LOG_MAX_SIZE=20m

# ==============================================
# STORAGE
# ==============================================
# Upload directory (relative to backend)
UPLOAD_DIR=./uploads
# Max upload size in MB
MAX_UPLOAD_SIZE=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# ==============================================
# DEVELOPMENT SETTINGS (for local development)
# ==============================================
# Uncomment these for local development
# SERVER_HOST=localhost
# HTTP_PORT=8080
# DB_HOST=localhost
# FRONTEND_ADMIN_URL=http://localhost:5173
# FRONTEND_CENTRAL_URL=http://localhost:5175
# FRONTEND_DISPLAY_URL=http://localhost:5174
