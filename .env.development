# ==============================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ==============================================
# This file is for local development only

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
APP_NAME=Wisse Digital Signage (Dev)
APP_VERSION=1.0.0-dev

# ==============================================
# SERVER CONFIGURATION
# ==============================================
SERVER_HOST=localhost
HTTP_PORT=8080
HTTPS_PORT=8443

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
BACKEND_PORT=3001

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=rts_digitalsignage
DB_USER=root
DB_PASS=devpassword

# MySQL Root Password
MYSQL_ROOT_PASSWORD=devpassword

# ==============================================
# MIDTRANS PAYMENT GATEWAY (Sandbox)
# ==============================================
MIDTRANS_SERVER_KEY=SB-Mid-server-xxx
MIDTRANS_CLIENT_KEY=SB-Mid-client-xxx
MIDTRANS_IS_PRODUCTION=false

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=dev_jwt_secret_key_not_for_production
JWT_EXPIRES_IN=24h

# ==============================================
# FRONTEND URLS (Development)
# ==============================================
FRONTEND_ADMIN_URL=http://localhost:5173
FRONTEND_CENTRAL_URL=http://localhost:5175
FRONTEND_DISPLAY_URL=http://localhost:5174

# ==============================================
# API URL (Development)
# ==============================================
API_URL=http://localhost:3001/api

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=debug
LOG_MAX_FILES=7d
LOG_MAX_SIZE=10m

# ==============================================
# STORAGE
# ==============================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175
