# ==============================================
# Backend Environment Variables
# ==============================================
# For development only. In production, use root .env file

# Database
DB_NAME=rts_digitalsignage
DB_USER=root
DB_PASS=
DB_HOST=localhost
DB_PORT=3306

# Midtrans Configuration
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Frontend URLs (for development)
FRONTEND_ADMIN_URL=http://localhost:5173
FRONTEND_DISPLAY_URL=http://localhost:5174
FRONTEND_CENTRAL_URL=http://localhost:5175

# Server
PORT=3001
NODE_ENV=development
